<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
   <typeAliases> <!-- 자바와 마이베티스를 연결할 브릿지역할 -->
      <typeAlias type="com.spring.ex01.MemberVO" alias="memberVO"/>
   </typeAliases>

   <environments default="development">
     <environment id="development">
        <transactionManager type="JDBC"/>  <!-- 트랜잭션타입 : JDBC -->
        <dataSource  type="POOLED">  <!-- mybatis가 제공하는 connection pool -->
            <property name="driver"  value="oracle.jdbc.driver.OracleDriver" />
            <property  name="url"    value="JDBC:oracle:thin:@localhost:1521:XE" />
            <property name="username" value="system" />
            <property name="password"  value="12345"/>        
        </dataSource>
     </environment>
   </environments>

<mappers>
   <mapper resource="mybatis/mappers/member.xml"/>  <!-- xml에있는 sql문을 매핑 -->
</mappers>
</configuration>
